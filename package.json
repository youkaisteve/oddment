{
    "name": "oddment",
    "version": "0.0.14",
    "description": "oddment for variable requirement",
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "test": "mocha -r ts-node/register test/*.test.ts",
        "commit": "git cz",
        "lint": "tslint -p tsconfig.prod.json",
        "build": "rm -rf ./build && tsc -p tsconfig.prod.json",
        "doc": "rm -rf ./doc && npx typedoc --module commonjs --target es5 --experimentalDecorators --plugin typedoc-plugin-markdown --out ./doc ./index.ts",
        "pub": "npm version patch && git push && cp package.json ./build/ && cp README.md ./build/ && cd build && npm publish && cd ..",
        "release": "standard-version"
    },
    "standard-version": {
        "skip": {
            "tag": true
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -e $GIT_PARAMS",
            "pre-commit": "npm run lint"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "@types/node": "^10.5.5",
        "chai": "^4.2.0",
        "mocha": "^7.1.2",
        "standard-version": "^8.0.0",
        "ts-node": "^8.3.0",
        "tslib": "^1.8.1",
        "tslint": "^5.11.0",
        "tslint-midway-contrib": "1",
        "typedoc": "^0.15.6",
        "typedoc-plugin-markdown": "^2.2.16",
        "typescript": "^3.5.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "oddment"
    ],
    "repository": "git@github.com:youkaisteve/oddment.git",
    "author": "youkaisteve",
    "license": "MIT"
}
